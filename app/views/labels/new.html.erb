<h3><%= t('view.label_new') %></h3>

<div class='errer-message'>
  <% if @label.errors.present? %>
    <ul id='error_explanation'>
      <% @label.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class='label_form'>
  <%= form_with model: @label, local: true do |form| %>
    <div class='form-group'>
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <%= form.submit t('view.regist'), class: 'btn btn-primary' %>
  <% end %>
</div>
