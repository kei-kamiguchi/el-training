<h3><%= t('view.admin_index') %></h3>

<div class='user-list'>
  <table class='table table-hover'>
    <thead class='thead-light'>
      <tr>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= User.human_attribute_name(:admin) %></th>
        <th><%= t('view.task_count') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |user| %>
        <tr>
          <td>
            <%= link_to user.name, [:admin, user] %>
          </td>
          <td><%= user.admin ? t('view.admin'): '' %></td>
          <td><%= user.tasks.all.count %></td>
          <td>
            <%= link_to t('view.delete'), [:admin, user], method: :delete, class: 'btn btn-outline-dark btn-sm' %>
            <%= link_to t('view.edit'), edit_admin_user_path(user), class: 'btn btn-outline-dark btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
