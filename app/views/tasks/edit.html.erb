<h1><%= t('view.edit') %></h1>

<% if @task.errors.present? %>
  <ul id='error_explanation'>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @task, local: true do |form| %>
  <div class='title'>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class='content'>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class='status'>
    <%= form.select :status, [['未着手', 1], ['着手中', 2], ['完了', 3]] %>
  </div>
  <%= form.submit t('view.update') %>
<% end %>
